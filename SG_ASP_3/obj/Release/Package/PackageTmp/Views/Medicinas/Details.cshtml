        <dd class="col-sm-9 text-left">
            @Html.DisplayFor(model => model.oMedicina.UserName)
        </dd>
    </dl>
</div>
<br />
<h2>Interconsultas</h2>
@if (Model.oInterconsulta.Count >= 1)
{
    <table class="table table-bordered table-dark">

        <tr>
            <th>Id</th>
            <th>Interconsulta</th>
            <th>Fecha de envio</th>
            <th>Personal que envió el correo</th>
            <th>Envio de hoja informativa</th>
            <th>Fecha de comicación al paciente</th>
            <th>Personal que comunicó al paciente</th>
            <th>Fecha de levantamiento de observaciones</th>
        </tr>

        @foreach (var Item in Model.oInterconsulta)
        {
            <tr>
                <td>@Html.DisplayFor(Model => Item.IdInter)</td>
                <td>@Html.DisplayFor(Model => Item.Descri)</td>
                <td>@Html.DisplayFor(Model => Item.FecEnv)</td>
                <td>@Html.DisplayFor(Model => Item.PeEnCo)</td>
                <td>@Html.DisplayFor(Model => Item.EnHoIn)</td>
                <td>@Html.DisplayFor(Model => Item.FeCoPa)</td>
                <td>@Html.DisplayFor(Model => Item.PeCoPa)</td>
                <td>@Html.DisplayFor(Model => Item.FeLeObs)</td>
            </tr>
        }

    </table>

}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.oMedicina.IdMedicina }) |
