        </dt>

        <dd class="col-sm-9 text-left">
            @Html.DisplayFor(model => model.oMedicina.HorSal)
        </dd>

        <dt class="col-sm-3 text-right">
            @Html.DisplayNameFor(model => model.oMedicina.FecApt)
        </dt>

        <dd class="col-sm-9 text-left">
