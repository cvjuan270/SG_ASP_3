@model SG_ASP_3.Models.DashBoardViewModel
@{
    ViewBag.Title = "Home Page";
}


@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <div style="padding:50px">


        <div class=" container">
            <h4>PROCESADOS [EMOS]</h4>
            <div class=" card-deck mb-3 text-center">
                <div class="card mb-4 box-shadow">
                    <div class=" card-header">
                        <h4>MEDICINA</h4>
                    </div>
                    <h1 class="card-title pricing-card-title">
                        @Model.ProMed/
                        <small class="text-muted">@Model.NumAte</small>
                    </h1>
                    @Html.ActionLink("Reporte", "MediRepo", null, new { @class = "btn btn-lg btn-block btn-outline-primary" })
                </div>

                <div class="card mb-4 box-shadow">
                    <div class=" card-header">
                        <h4>AUDITORIA</h4>
                    </div>
                    <h1 class="card-title pricing-card-title">
                        @Model.ProAud/
                        <small class="text-muted">@Model.NumAte</small>
                    </h1>
                </div>

                <div class="card mb-4 box-shadow">
                    <div class=" card-header">
                        <h4>ENFERMERIA (interconsultas)</h4>
                    </div>
                    <h1 class="card-title pricing-card-title">
                        @Model.ProEnf/
                        <small class="text-muted">@Model.NumInt</small>
                    </h1>
                </div>

                <div class="card mb-4 box-shadow">
                    <div class=" card-header">
                        <h4>ADMISION</h4>
                    </div>
                    <h1 class="card-title pricing-card-title">
                        @Model.ProMed/
                        <small class="text-muted">@Model.NumAte</small>
                    </h1>
                </div>
            </div>

            <div class=" card-deck mb-3 text-center">
                <div class="card mb-4 box-shadow">
                    <div class=" card-header">
                        <h4>APTITUDES</h4>
                    </div>
                    <h1 class="card-title pricing-card-title">
                        @Model.ProMed/
                        <small class="text-muted">@Model.NumAte</small>
                    </h1>
                    <ul class=" list-unstyled mt-3 mb-4">
                        @foreach (var item in Model.Aptitudes)
                        {
                            <li>@item.Descri|@item.IdApti</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="embed-responsive embed-responsive-16by9">

            <iframe class="embed-responsive-item" src="https://policlinicosangabriel.com/" allowfullscreen></iframe>
        </div>
}