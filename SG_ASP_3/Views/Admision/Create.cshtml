@model SG_ASP_3.Models.AdmisionViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Admision</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div>
            @Html.HiddenFor(m => m.Admision.IdAdmi)
            <dl class="row">
                <dt class="col-sm-3 text-right">ID</dt>
                <dd class="col-sm-9 text-left"> @Html.TextBoxFor(model => model.Admision.IdAtenciones, new { @readonly = "readonly", @With = "100", @class = "form-control" })

                <dt class="col-sm-3 text-right">Documento de identidad</dt>
                <dd class="col-sm-9 text-left">@Html.DisplayText("DocIde")</dd>

                <dt class="col-sm-3 text-right">Nombre y apellido</dt>
                <dd class="col-sm-9 text-left">@Html.DisplayText("NomApe")</dd>

                <dt class="col-sm-3 text-right">Empresa</dt>
                <dd class="col-sm-9 text-left">@Html.DisplayText("Empres")</dd>
            </dl>
        </div>
        <hr />
        <div class="form-horizontal">
            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.HorIng, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admision.HorIng, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admision.HorIng, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.HorReg, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admision.HorReg, new { htmlAttributes = new { @class = "form-control",@readonly="readonly" } })
                    @Html.ValidationMessageFor(model => model.Admision.HorReg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.HorSal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admision.HorSal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admision.HorSal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.Pendie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admision.Pendie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admision.Pendie, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.EnvAsi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div >
                        @Html.EditorFor(model => model.Admision.EnvAsi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Admision.EnvAsi, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.EnvApt, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div>
                        @Html.EditorFor(model => model.Admision.EnvApt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Admision.EnvApt, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.FecEnvResMed, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admision.FecEnvResMed, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admision.FecEnvResMed, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Admision.FecEnvResEmp, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admision.FecEnvResEmp, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Admision.FecEnvResEmp, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />
        <div class="form-horizontal">
            <hr />
            <div>
                <h4>Interconsultas</h4>
                <table class="tabe table-striped">
                    <tr class="table info">
                        <th>Nombre</th>
                        <th>Id</th>
                        <th>Interconsulta</th>
                        <th>Fecha de envio</th>
                        <th>Personal que envió el correo</th>
                        <th>Envio de hoja informativa</th>
                        <th>Fecha de comicación al paciente</th>
                        <th>Personal que comunicó al paciente</th>
                        <th>Fecha de levantamiento de observaciones</th>
                    </tr>

                    @for (int i = 0; i < Model.Interconsultas.Count; i++)
                    {
                        <tr>
                            <td>@Html.DisplayText("DocIde")|@Html.DisplayText("NomApe")</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].IdInter, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].Descri, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].FecEnv, new { htmlAttributes = new { @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].PeEnCo, new { htmlAttributes = new { @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].EnHoIn, new { htmlAttributes = new { @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].FeCoPa, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].PeCoPa, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                            <td>@Html.EditorFor(m => Model.Interconsultas[i].FeLeObs, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                            <td>@Html.HiddenFor(m => Model.Interconsultas[i].IdAtenciones, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

